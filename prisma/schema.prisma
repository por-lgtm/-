generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Item {
  id          String   @id @default(uuid())
  name        String
  unit        String   @default("æžš")
  formulaType String   // "SIMPLE", "TOWEL_B", "TOWEL_F"
}

model StockSnapshot {
  itemId      String   @id
  shelfCount  Int      @default(0)
  updatedAt   DateTime @updatedAt
}

model ActualEvent {
  id        String   @id @default(uuid())
  itemId    String
  delta     Int
  reason    String
  memo      String?
  createdAt DateTime @default(now())
}

model Booking {
  bookingId   String   @id
  checkIn     DateTime
  checkOut    DateTime?
  guests      Int
  importedAt  DateTime @default(now())
}

model PlannedEvent {
  id        String   @id @default(uuid())
  bookingId String
  itemId    String
  date      DateTime
  delta     Int
  note      String?
  createdAt DateTime @default(now())

  @@index([date])
  @@index([bookingId])
}

model SystemSetting {
  key   String @id
  value String
}
